<% layout('./layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center"> Edit Tarheel</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/UNCroster/<%=roster._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="roster[name]" value="<%= roster.name %>" required>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="title">Playing Style</label>
                    <input class="form-control" type="text" id="title" name="roster[title]" value="<%= roster.title %>" required>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="class">Class</label>
                    <input class="form-control" type="text" id="class" name="roster[class]" value="<%= roster.class %>" required>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="hometown">Hometown</label>
                    <input class="form-control" type="text" id="hometown" name="roster[hometown]" value="<%= roster.hometown %>" required>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>

                <div class="row mb-6">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label" for="height">Height</label>
                            <input class="form-control" type="text" id="height" name="roster[height]" value="<%= roster.height %>" required>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label" for="weight">Weight</label>
                            <input class="form-control" type="text" id="weight" name="roster[weight]" value="<%= roster.weight%>" required>
                        </div>
                    </div>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>

                <div class="mt-3 custom-file">
                    <input type="file" class="custom-file-input" id="image" name="image" multiple>
                    <label class="custom-file-label" for="image">Add image(s)</label>
                </div>


                <div class="mb-3">
                <% roster.images.forEach(function(img, i) { %>
                     <img src=" <%=img.thumbnail%> " class="img-thumbnail" alt="">
                     <div class="form-check-inline">
                        <input type="checkbox" id="imgage-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                     </div>
                     <label for="imgage-<%= i %>">Delete?</label>
                 <% }) %>
                </div>

                <div class="mt-3 mb-3">
                <button class="btn btn-info">Update Tarheel</button>
                </div>
            </form>
            <a href="/UNCroster">Go Back to Roster</a>
        </div>
    </div>
