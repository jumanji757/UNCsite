<% layout('./layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center"> Edit Prospect</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/prospects/<%=prospect._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="prospect[name]" value="<%= prospect.name %>" required>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="title">Playing Style</label>
                    <input class="form-control" type="text" id="title" name="prospect[title]" value="<%= prospect.title %>" required>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="class">Class</label>
                    <input class="form-control" type="text" id="year" name="prospect[year]" value="<%= prospect.year %>" required>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="hometown">Hometown</label>
                    <input class="form-control" type="text" id="hometown" name="prospect[hometown]" value="<%= prospect.hometown %>" required>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>

                <div class="row mb-6">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label" for="height">Height</label>
                            <input class="form-control" type="text" id="height" name="prospect[height]" value="<%= prospect.height %>" required>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label" for="weight">Weight</label>
                            <input class="form-control" type="text" id="weight" name="prospect[weight]" value="<%= prospect.weight%>" required>
                        </div>
                    </div>
                    <div class="valid-feedback">
                        Looks Dadgum Good!
                    </div>
                </div>

                <div class="mt-3 custom-file">
                    <input type="file" class="custom-file-input" id="image" name="image" multiple>
                    <label class="custom-file-label" for="image">Add image(s)</label>
                </div>


                <div class="mb-3">
                <% prospect.images.forEach(function(img, i) { %>
                     <img src=" <%=img.thumbnail%> " class="img-thumbnail" alt="">
                     <div class="form-check-inline">
                        <input type="checkbox" id="imgage-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                     </div>
                     <label for="imgage-<%= i %>">Delete?</label>
                 <% }) %>
                </div>

                <div class="mt-3 mb-3">
                <button class="btn btn-info">Update Prospect</button>
                </div>
            </form>
            <a href="/prospects">Go Back to Prospects</a>
        </div>
    </div>
