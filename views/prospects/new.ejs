<% layout('./layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center"> New Prospect</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/prospects" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="prospect[name]" required>
                <div class="valid-feedback">
                    Looks Dadgum Good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="title">Playing Style</label>
                <input class="form-control" type="text" id="title" name="prospect[title]" required>
                <div class="valid-feedback">
                    Looks Dadgum Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="class">Class</label>
                <input class="form-control" type="text" id="year" name="prospect[year]" required>
                <div class="valid-feedback">
                    Looks Dadgum Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="hometown">Hometown</label>
                <input class="form-control" type="text" id="hometown" name="prospect[hometown]" required>
                <div class="valid-feedback">
                    Looks Dadgum Good!
                </div>
            </div>

            <div class="row mb-6">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="form-label" for="height">Height</label>
                        <input class="form-control" type="text" id="height" name="prospect[height]" required>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="form-label" for="weight">Weight</label>
                        <input class="form-control" type="text" id="weight" name="prospect[weight]" required>
                    </div>
                </div>
                <div class="valid-feedback">
                    Looks Dadgum Good!
                </div>
            </div>
            <div class="mt-3 custom-file">
                <input type="file" class="custom-file-input" id="image" name="image" multiple>
                <label class="custom-file-label" for="image">Choose image(s)</label>
              </div>

            <div class="mt-3 mb-3">
            <button class="btn btn-info">Submit</button>
            </div>
            <a href="/prospects">All Prospects</a>
        </form>
    </div>
</div>
